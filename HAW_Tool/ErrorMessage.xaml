<Window x:Class="HAW_Tool.ErrorMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ErrorMessage" Height="400" Width="990">
    <Grid>
        <TextBlock x:Name="ErrorLabel" Background="#FFFFDDCC" Foreground="Red" VerticalAlignment="Top" Margin="8" MinHeight="30" MaxHeight="100" TextWrapping="WrapWithOverflow" />
        <ScrollViewer Margin="8,100,8,45">
            <TextBox x:Name="ErrorMessageText" TextWrapping="Wrap" />
        </ScrollViewer>
        <Button Content="OK" Click="ButtonClick" VerticalAlignment="Bottom" IsDefault="True" Width="70" HorizontalAlignment="Right" Margin="8" />
    </Grid>
</Window>
