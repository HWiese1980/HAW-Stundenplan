<UserControl x:Class="HAW_Tool.ToolTipPopupContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Width="Auto" Height="Auto">
        <Border HorizontalAlignment="Left" Margin="8" VerticalAlignment="Top" Background="#FFFFFBA9" BorderBrush="#FFD6D159" BorderThickness="2" CornerRadius="5" Opacity="1">
            <Border.Effect>
                <DropShadowEffect Opacity="0.5" RenderingBias="Quality" ShadowDepth="5"/>
            </Border.Effect>
            <Label Width="Auto" Height="Auto" Content="{Binding ToolTip}"/>
        </Border>
    </Grid>
</UserControl>
